{
  "manifest_version": 2,
  "name": "Parami Extension",
  "version": "1.0",
  "description": "Enable link from your PFP to Parami Protocol",
  "icons": {
    "16": "/images/icon_16.png",
    "32": "/images/icon_32.png",
    "48": "/images/icon_48.png",
    "128": "/images/icon_128.png"
  },
  "web_accessible_resources": [
    "/images/logo-round-core.svg"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.discord.com/*"
      ],
      "css": [
        "styles/common.css",
        "styles/discord.css"
      ],
      "js": [
        "lib/bs58.js",
        "utilities.js",
        "sites/discord.js"
      ]
    },
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "css": [
        "styles/common.css",
        "styles/twitter.css"
      ],
      "js": [
        "lib/bs58.js",
        "utilities.js",
        "sites/twitter.js"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "styles/common.css",
        "styles/youtube.css"
      ],
      "js": [
        "lib/bs58.js",
        "utilities.js",
        "sites/youtube.js"
      ]
    },
    {
      "matches": [
        "*://*.weibo.com/*"
      ],
      "css": [
        "styles/common.css",
        "styles/weibo.css"
      ],
      "js": [
        "lib/bs58.js",
        "utilities.js",
        "sites/weibo.js"
      ]
    },
    {
      "matches": [
        "*://*.mirror.xyz/*"
      ],
      "css": [
        "styles/common.css",
        "styles/mirror.css"
      ],
      "js": [
        "lib/bs58.js",
        "utilities.js",
        "sites/mirror.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "/images/icon_32.png",
    "default_title": "Parami Extensions",
    "default_popup": "/page/popup.html"
  },
  "background": {
    "service_worker": "/lib/background.js"
  },
  "permissions": [
    "*://graph.parami.io/",
    "*://cdn.discordapp.com/",
    "*://*.twitter.com/",
    "*://*.twimg.com/",
    "*://*.ggpht.com/",
    "*://*.sinaimg.cn/",
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}