{
  "manifest_version": 3,
  "name": "Parami Hyperlink NFT Extension",
  "version": "0.0.5",
  "description": "Enable Hyperlink for your HNFT profile photo.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "icons/logo-round-core.svg" ],
      "matches": [ "*://*/*" ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Parami Hyperlink NFT Extension",
    "default_popup": "popup.html",
    "default_icon": "icons/icon_32.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'wasm-unsafe-eval' 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "run_at": "document_idle",
      "js": [],
      "css": []
    },
    {
      "matches": [
        "https://app.parami.io/*"
      ],
      "run_at": "document_idle",
      "js": [
        "parami.js"
      ]
    }
  ]
}